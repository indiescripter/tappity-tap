{
  "name": "tappity-tap",
  "version": "14.10.5",
  "metapackage": "javascript-tschecked-app",
  "description": "A TypeScript-batteries-included drop-in wrapper for node-tap",
  "keywords": [
    "assert",
    "assertion",
    "javascript",
    "jest",
    "node-tap",
    "node.js",
    "tap",
    "tape",
    "test",
    "test-anywhere-protocol",
    "testing",
    "types",
    "typescript",
    "typings"
  ],
  "copyright": "Copyright (c) 2020 Justin Johansson",
  "license": "MIT",
  "homepage": "https://github.com/indiescripter/tappity-tap/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/indiescripter/tappity-tap/issues"
  },
  "author": {
    "name": "Justin Johansson",
    "email": "connect@indiescripter.com",
    "url": "https://www.indiescripter.com/"
  },
  "repository": "https://github.com/indiescripter/tappity-tap.git",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "bin": {
    "tap": "node_modules/tap/bin/run.js"
  },
  "main": "index.js",
  "typings": "index.d.ts",
  "dependencies": {
    "tap": "14.10.7"
  },
  "devDependencies": {
    "@commitlint/cli": "9.0.1",
    "@commitlint/config-conventional": "9.0.1",
    "@types/node": "14.0.14",
    "@typescript-eslint/eslint-plugin": "3.4.0",
    "@typescript-eslint/parser": "3.4.0",
    "eslint": "7.3.1",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "typescript": "3.9.5"
  },
  "groundedDependencies": [
    "@commitlint/cli",
    "@commitlint/config-conventional",
    "husky",
    "lint-staged",
    "tap"
  ],
  "bundledDependencies": [
    "tap"
  ],
  "scripts": {
    "build": "tsc -p .",
    "format": "prettier --write *.{d.ts,js}",
    "lint": "eslint *.{d.ts,js}",
    "prepare": "npm run format && npm run lint && npm run build"
  },
  "engines": {
    "node": ">=10"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{d.ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
